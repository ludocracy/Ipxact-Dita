<transform grammar="Dita.grammar" src_ns="ipxact" source="component/memoryMaps/memoryMap">
  <dita:topic source="addressBlock" arg0="name/*">
    <dita:topic arg="'Memory map'">
      <dita:table arg0="'Address offset', 'Register', 'Access'">
        <!-- @merge applies to source array -->
        <dita:row source="register" merge="mem_map_row">
          <ipxact:offset base_note="prefix"/>
          <get source="description/*"/>
          <get source="access/*"/>
        </dita:row>
      </dita:table>
    </dita:topic>
    <dita:topic source="register" arg0="name/*">
      <ipxact:offset_table/>
      <ipxact:reg_fig />
      <dita:table arg0="'Bit range', 'Name'">
        <dita:row source="field">
          <ipxact:bit_range/>
          <get source="name/*"/>
        </dita:row>
      </dita:table>
    </dita:topic>
  </dita:topic>
</transform>